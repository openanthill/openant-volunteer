<odoo>
           
    <record id="action_partner_volunteer_form" model="ir.actions.act_window">
        <field name="name">Volunteers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="domain">[]</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_volunteer': 1,
                               'default_is_company': False,
                               'default_customer': False,
                               'default_volunteer': True}</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new volunteers in your address book
            </p><p>
            Odoo helps you easily track all activities related to volunteers.
            </p>
        </field>
    </record>

</odoo>