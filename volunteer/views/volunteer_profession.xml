<odoo>

    <record id="volunteer_profession_form" model="ir.ui.view">
        <field name="name">volunteer.profession.form</field>
        <field name="model">volunteer.profession</field>
        <field name="arch" type="xml">
            <form string="Volunteer Professions">
                <group col="4">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="skills_id" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>

    <record id="volunteer_profession_tree" model="ir.ui.view">
        <field name="name">volunteer.profession.tree</field>
        <field name="model">volunteer.profession</field>
        <field name="arch"  type="xml">
            <tree string="Volunteer Professions">
                <field name="name"/>
            </tree>
        </field>
    </record>

<!-- Menu item action -->
    <record id="volunteer_profession_action" model="ir.actions.act_window">
        <field name="name">Volunteer Professions</field>
        <field name="res_model">volunteer.profession</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- Menu item -->
    <menuitem id="profession_config_menu"
        parent="volunteer_config_menu"
        action="volunteer_profession_action"
        name="Professions"
        sequence="10"/>

</odoo>
